<% include ./partials/head %>

<body class="off-canvas-sidebar">
  <!-- Navbar -->
  <% include ./partials/navbar %>
  <!-- End Navbar -->
  <div class="wrapper wrapper-full-page">
    <div class="page-header login-page header-filter" filter-color="black" style="background-image: url('/img/login.jpg'); background-size: cover; background-position: top center;">
      <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
          <% if ((typeof(errorMessage) === 'string') && errorMessage !== '') { %>
            <div class="alert alert-warning alert-with-icon mb-5" data-notify="container">
              <i class="material-icons" data-notify="icon">error</i>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <i class="material-icons">close</i>
              </button>
              <span data-notify="message"><%= errorMessage %></span>
            </div>
          <% } %>
            <form method="POST" action="/auth/login" novalidate="novalidate">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="card ">
                <div class="card-header card-header-rose card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">contacts</i>
                  </div>
                  <h4 class="card-title">Login</h4>
                </div>
                <div class="card-body ">
                  <% let err; %>
                  <div class="form-group bmd-form-group <%= validationErrors.find(e => e.param === 'email') ? 'has-danger' : '' %>">
                    <label for="email" class="bmd-label-floating"> Email Address *</label>
                    <input id="email" type="email" name="email" class="form-control" value="<%= oldInput.email %>" required="true" aria-required="true">
                    <% err = validationErrors.find(e => e.param === 'email');
                      if (err) {
                    %> 
                    <label class="error" for="email"><%= err.msg %></label>
                    <% } %>
                  </div>
                  <div class="form-group bmd-form-group <%= validationErrors.find(e => e.param === 'password') ? 'has-danger' : '' %>">
                    <label for="password" class="bmd-label-floating"> Password *</label>
                    <input id="password" type="password" name="password" class="form-control" value="<%= oldInput.password %>" required="true" aria-required="true">
                    <% err = validationErrors.find(e => e.param === 'password');
                      if (err) {
                    %> 
                    <label class="error" for="password"><%= err.msg %></label>
                    <% } %>
                  </div>
                  <div class="category form-category">
                    <a href="/auth/reset">Forgot password?</a>
                  </div>
                </div>
                <div class="card-footer ml-auto mr-auto">
                  <button type="submit" class="btn btn-rose">Login</button>
                </div>
                <div class="row justify-content-center my-3">
                  <div class="col-10">
                    <a href="#pablo" class="btn btn-block btn-facebook">
                      <i class="fa fa-facebook-square"></i> Continue with Facebook
                      <div class="ripple-container"></div>
                    </a>
                    <a href="#pablo" class="btn btn-block btn-google">
                      <i class="fa fa-google-plus"></i> Continue with Google
                      <div class="ripple-container"></div>
                    </a>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <footer class="footer">
        
      </footer>
    </div>
  </div>
  <% include ./partials/scripts %>
</body>

</html>