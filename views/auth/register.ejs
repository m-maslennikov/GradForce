<% include ./partials/head %>

<body class="off-canvas-sidebar">
  <!-- Navbar -->
  <% include ./partials/navbar %>
  <!-- End Navbar -->
  <div class="wrapper wrapper-full-page">
    <div class="page-header register-page header-filter" filter-color="black" style="background-image: url('/img/register.jpg')">
      <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
      <div class="container">
        <div class="row">
          <div class="col-md-10 ml-auto mr-auto">
            <div class="card card-signup card-hidden">
              <h2 class="card-title text-center">Register</h2>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-4 ml-auto">
                    <div class="info info-horizontal">
                      <div class="icon icon-rose">
                        <i class="material-icons">code</i>
                      </div>
                      <div class="description">
                        <h4 class="info-title">IT Services</h4>
                        <p class="description">

                        </p>
                      </div>
                    </div>
                    <div class="info info-horizontal">
                      <div class="icon icon-primary">
                        <i class="material-icons">work</i>
                      </div>
                      <div class="description">
                        <h4 class="info-title">Business Services</h4>
                        <p class="description">

                        </p>
                      </div>
                    </div>
                    <div class="info info-horizontal">
                      <div class="icon icon-info">
                        <i class="material-icons">group</i>
                      </div>
                      <div class="description">
                        <h4 class="info-title">Recruitement Services</h4>
                        <p class="description">

                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 mr-auto">
                    <form class="form" method="POST" action="/auth/register" novalidate>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <div class="form-check form-check-radio form-check-inline">
                        <label class="form-check-label">
                          <input class="form-check-input" type="radio" name="role" value="student" required="true"> I'm looking for a job
                          <span class="circle">
                            <span class="check"></span>
                          </span>
                        </label>
                      </div>
                      <div class="form-check form-check-radio form-check-inline">
                        <label class="form-check-label">
                          <input class="form-check-input" type="radio" name="role" value="employer" required="true"> I'm looking to hire
                          <span class="circle">
                            <span class="check"></span>
                          </span>
                        </label>
                      </div>

                      <% let err; %>
                      <div class="form-group bmd-form-group <%= validationErrors.find(e => e.param === 'email') ? 'has-danger' : '' %>">
                        <label for="email" class="bmd-label-floating"> Email Address *</label>
                        <input id="email" type="email" name="email" class="form-control" value="<%= oldInput.email %>" required="true" aria-required="true">
                        <% err = validationErrors.find(e => e.param === 'email');
                          if (err) {
                        %> 
                        <label class="error" for="email"><%= err.msg %></label>
                        <% } %>
                      </div>
                      <div class="form-group bmd-form-group <%= validationErrors.find(e => e.param === 'password') ? 'has-danger' : '' %>">
                        <label for="password" class="bmd-label-floating"> Password *</label>
                        <input id="password" type="password" name="password" class="form-control" value="<%= oldInput.password %>" required="true" aria-required="true">
                        <% err = validationErrors.find(e => e.param === 'password');
                          if (err) {
                        %> 
                        <label class="error" for="password"><%= err.msg %></label>
                        <% } %>
                      </div>
                      <div class="form-group bmd-form-group <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'has-danger' : '' %>">
                        <label for="confirmPassword" class="bmd-label-floating"> Confirm Password *</label>
                        <input id="confirmPassword" type="password" name="confirmPassword" class="form-control" value="<%= oldInput.confirmPassword %>" required="true" aria-required="true">
                        <% err = validationErrors.find(e => e.param === 'confirmPassword');
                          if (err) {
                        %> 
                        <label class="error" for="confirmPassword"><%= err.msg %></label>
                        <% } %>
                      </div>
                      <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-round mt-4">Get Started</button>
                      </div>
                    </form>
                    <div class="row justify-content-center my-3">
                      <div class="col-10">
                        <button class="btn btn-block btn-google">
                          <i class="fa fa-google-plus"></i> Continue with Google
                        </button>
                        <button class="btn btn-block btn-facebook">
                          <i class="fa fa-facebook-square"></i> Continue with Facebook
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer">
      </footer>
    </div>
  </div>
  <% include ./partials/scripts %>
</body>

</html>