                    <h3 class="card-title">
                      Build Your Profile
                    </h3>
                  </div>
                  <div class="wizard-navigation">
                    <ul class="nav nav-pills">
                      <li class="nav-item" style="width: 33.3333%;">
                        <a class="nav-link active" href="#about" data-toggle="tab" role="tab">
                          About
                        </a>
                      </li>
                      <li class="nav-item" style="width: 33.3333%;">
                        <a class="nav-link" href="#account" data-toggle="tab" role="tab">
                          Work Experience
                        </a>
                      </li>
                      <li class="nav-item" style="width: 33.3333%;">
                        <a class="nav-link" href="#address" data-toggle="tab" role="tab">
                          Education
                        </a>
                      </li>
                    </ul>
                  <div class="moving-tab" style="width: 169.703px; transform: translate3d(-8px, 0px, 0px); transition: transform 0s ease 0s;">
                          About
                        </div></div>
                  <div class="card-body">
                    <div class="tab-content">
                      <!-- About tag -->
                      <div class="tab-pane active" id="about">
                        <h5 class="info-text"> Please, fill your details</h5>
                        <div class="row justify-content-center">
                          <!-- <div class="col-sm-4">
                            <div class="picture-container">
                              <div class="picture">
                                <img src="../../assets/img/default-avatar.png" class="picture-src" id="wizardPicturePreview" title="">
                                <input type="file" id="wizard-picture">
                              </div>
                              <h6 class="description">Choose Picture</h6>
                            </div>
                          </div> -->
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">face</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="firstname" class="bmd-label-floating">First Name *</label>
                                <input type="text" class="form-control" id="firstname" name="firstname" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">record_voice_over</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="lastname" class="bmd-label-floating">Last Name *</label>
                                <input type="text" class="form-control" id="lastname" name="lastname" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">email</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="email" class="bmd-label-floating">Email *</label>
                                <input type="email" class="form-control" id="email" name="email" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">phone</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="phone" class="bmd-label-floating">Phone *</label>
                                <input type="text" class="form-control" id="phone" name="phone" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">lock</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="password" class="bmd-label-floating">Password *</label>
                                <input type="password" class="form-control" id="password" name="password" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                              <div class="input-group form-control-lg">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">
                                    <i class="material-icons">lock</i>
                                  </span>
                                </div>
                                <div class="form-group bmd-form-group">
                                  <label for="confirmpassword" class="bmd-label-floating">Confirm Password *</label>
                                  <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" required="" aria-required="true">
                                </div>
                              </div>
                            </div>
                              <div class="col-10">
                                <button class="btn btn-block btn-google">
                                  <i class="fa fa-google-plus"></i> Continue with Google
                                </button>
                                <button class="btn btn-block btn-facebook">
                                  <i class="fa fa-facebook-square"></i> Continue with Facebook
                                </button>
                              </div>
                        </div>
                      </div>
                      <!-- Work Experience tag -->
                      <div class="tab-pane" id="account">
                        <h5 class="info-text"> Fill up your last work experience </h5>
                        <div class="row justify-content-center">
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">business</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="company" class="bmd-label-floating">Company Name</label>
                                <input type="text" class="form-control" id="company" name="copmanyname" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">work</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="jobrole" class="bmd-label-floating">Job Role</label>
                                <input type="text" class="form-control" id="jobrole" name="jobrole" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-12">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">description</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="jobdescription" class="bmd-label-floating">Job Description</label>
                                <textarea name="jobdescription" class="form-control" rows="3" id="jobdescription" form="register"></textarea>
                                <!-- <input type="email" class="form-control" id="jobdescription" name="jobdescription" required="" aria-required="true"> -->
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">date_range</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="startdate" class="bmd-label-floating">Start Date</label>
                                <input type="text" class="form-control datepicker" id="startdate" name="startdate" value="10/06/2018">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">date_range</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="enddate" class="bmd-label-floating">End Date</label>
                                <input type="text" class="form-control datepicker" id="enddate" name="enddate" value="10/06/2018">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">place</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="city" class="bmd-label-floating">City</label>
                                <input type="text" class="form-control" id="city" name="city" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">language</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="country" class="bmd-label-floating">Country</label>
                                <input type="text" class="form-control" id="country" name="country" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Education tag -->
                      <div class="tab-pane" id="address">
                        <div class="row justify-content-center">
                          <div class="col-sm-12">
                            <h5 class="info-text"> Fill up with your main education</h5>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">subject</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="coursename" class="bmd-label-floating">Course Name</label>
                                <input type="text" class="form-control" id="coursename" name="coursename" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">toc</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="courselevel" class="bmd-label-floating">Course Level</label>
                                <input type="text" class="form-control" id="courselevel" name="courselevel" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-12">
                            <div class="input-group form-control-lg">
                              <div class="input-group-prepend">
                                <span class="input-group-text">
                                  <i class="material-icons">school</i>
                                </span>
                              </div>
                              <div class="form-group bmd-form-group">
                                <label for="schoolname" class="bmd-label-floating">Course Level</label>
                                <input type="text" class="form-control" id="schoolname" name="schoolname" required="" aria-required="true">
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                              <div class="input-group form-control-lg">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">
                                    <i class="material-icons">date_range</i>
                                  </span>
                                </div>
                                <div class="form-group bmd-form-group">
                                  <label for="startdateschool" class="bmd-label-floating">Start Date</label>
                                  <input type="text" class="form-control datepicker" id="startdateschool" name="startdateschool" value="10/06/2019">
                                </div>
                              </div>
                            </div>
                            <div class="col-lg-6">
                              <div class="input-group form-control-lg">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">
                                    <i class="material-icons">date_range</i>
                                  </span>
                                </div>
                                <div class="form-group bmd-form-group">
                                  <label for="enddateschool" class="bmd-label-floating">End Date</label>
                                  <input type="text" class="form-control datepicker" id="enddateschool" name="enddateschool" value="10/06/2019">
                                </div>
                              </div>
                            </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer">
                    <div class="mr-auto">
                      <input type="button" class="btn btn-previous btn-fill btn-default btn-wd disabled" name="previous" value="Previous">
                    </div>
                    <div class="ml-auto">
                      <input type="button" class="btn btn-next btn-fill btn-rose btn-wd" name="next" value="Next">
                      <input type="button" class="btn btn-finish btn-fill btn-rose btn-wd" name="finish" value="Register" style="display: none;">
                    </div>
                    <div class="clearfix"></div>
                  </div>
                </form>
              </div>
            </div>
            <!-- wizard container -->
          </div>
        </div>
      </div>
      <footer class="footer">
      </footer>
    </div>
  </div>
  <% include ./partials/scripts %>
  <script src="../js/wizard.js"></script>
  <script>
    $(document).ready(function() {
      // Initialise the wizard
      wizard.initMaterialWizard();
      setTimeout(function() {
        $('.card.card-wizard').addClass('active');
      }, 600);
      
      // initialise Datetimepicker and Sliders
      md.initFormExtendedDatetimepickers();
      if ($('.slider').length != 0) {
        md.initSliders();
      }
    });
  
  </script>
</body>

</html>